        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            @Html.LabelFor(model => model.mathuoc, "Tên thuốc", htmlAttributes: new { @class = "control-label col-md-2" })
