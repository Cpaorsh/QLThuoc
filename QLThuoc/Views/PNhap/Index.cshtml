@model IEnumerable<QLThuoc.Models.PNHAP>

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-10">
                <strong class="text-uppercase text-dark">Nhập thuốc</strong>
            </div>
            <div class="col-md-2 text-end">
                <a href="@Url.Action("Index","CTPNhap")" class="btn btn-sm btn-success">Thuốc đã nhập </a>
                <a href="@Url.Action("Create","PNhap")" class="btn btn-sm btn-primary">Tạo mới </a>
            </div>
        </div>
    </div>
    <div class="card-body p-3">
        <table class="table table-secondary table-bordered">
            <thead>
                <tr>
                    <th style="width:25%" class="text-center">Mã phiếu</th>
                    <th style="width:25%" class="text-center">Ngày nhập</th>
                    <th style="width:25%" class="text-center">Tên nhân viên</th>
                    <th style="width:25%" class="text-center">Chức năng</th>
                </tr>
            </thead>
            <tbody style="width:auto" class="text-center">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.maphieu)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ngaynhap)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NHANVIEN.tennv)
                        </td>
                        <td class="text-center">
                            <a href="@Url.Action("Edit","PNhap", new { id = item.maphieu })" class="btn btn-sm btn-warning">Sửa </a>
                            <a href="@Url.Action("Index","CTPNhap", new { id = item.maphieu }, null)" class="btn btn-sm btn-secondary">Xem </a>
                            <a href="@Url.Action("Delete","PNhap", new { id = item.maphieu })" class="btn btn-sm btn-danger">Xóa </a>
                            <a href="@Url.Action("PrintPDF","CTPNhap", new { id = item.maphieu }, null)" class="btn btn-sm btn-success">PDF</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>