@model IEnumerable<QLThuoc.Class.CTPXUATHT>


<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-10">
                <strong class="text-uppercase text-dark">Thuốc đã xuất</strong>
            </div>
            <div class="col-md-2 text-end">
                <a href="@Url.Action("Create","CTPXUAT")" class="btn btn-sm btn-primary">Tạo mới </a>
            </div>
        </div>
    </div>
    <div class="card-body p-2">
        <table class="table table-secondary table-bordered">
            <thead>
                <tr>
                    <th style="width:100px" class="text-center">Tên thuốc </th>
                    <th style="width:100px" class="text-center">Ngày xuất</th>
                    <th style="width:100px" class="text-center">Số lượng xuất </th>
                    <th style="width:100px" class="text-center">Đơn vị tính</th>
                    <th style="width:100px" class="text-center">Đơn giá</th>
                    <th style="width:100px" class="text-center">Thành tiền</th>
                    <th style="width:200px" class="text-center">Chức năng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.THUOC.tenthuoc)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PXUAT.ngayxuat)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.slxuat)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.THUOC.dvtinh)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.THUOC.dongia)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.thanhtien)
                        </td>
                        <td class="text-center">
                            <a href="@Url.Action("Edit","CTPXuat", new { id = item.id })" class="btn btn-sm btn-warning">Sửa</a>
                            <a href="@Url.Action("Delete","CTPXuat", new { id = item.id })" class="btn btn-sm btn-danger">Xóa</a>
                        </td>
                    </tr>
                }
                <tr>
                    <th>
                        Tổng
                    </th>
                    <th>

                    </th>
                    <th>
                        @Model.Sum(x => x.slxuat)
                    </th>
                    <th>
                    </th>
                    <th>

                    </th>
                    <th>
                        @Model.Sum(x => x.thanhtien)
                    </th>
                    <th></th>
                </tr>
        </table>
    </div>
    @*<div class="card-footer text-end">
        <a href="@Url.Action("Index","PXuat")" class="btn btn-sm btn-dark">Quay trở về</a>
    </div>*@
</div>