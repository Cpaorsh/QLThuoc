@model QLThuoc.Models.CTPXUAT

@{
    ViewBag.Title = "Xuất thuốc";
}



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label>Mã phiếu</label>
            <div class="col-md-10">
                @Html.DropDownList("maphieu", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.maphieu, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Tên thuốc</label>
            <div class="col-md-10">
                @Html.DropDownList("mathuoc", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.mathuoc, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.slxuat, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.slxuat, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.slxuat, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm" class="btn btn-success" />
                <button class="btn btn-sm btn-default">@Html.ActionLink("Trở về", "Index")</button>
                <p class="text-danger">@ViewBag.Messeger</p>
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
