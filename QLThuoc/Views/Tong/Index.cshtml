    <div class="card-body p-3">
        <table class="table table-secondary table-bordered">
            <thead>
                <tr>
                    <th style="width:300px" class="text-center">Tên thuốc</th>
                    <th style="width:200px" class="text-center">Hoạt chất</th>
                    <th style="width:100px" class="text-center">Loại thuốc</th>
                    <th style="width:100px" class="text-center">Nơi sản xuất</th>
                    <th style="width:100px" class="text-center">Đơn vị tính </th>
