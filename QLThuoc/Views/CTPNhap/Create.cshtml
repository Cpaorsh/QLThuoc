@model QLThuoc.Models.CTPNHAP

@{
    ViewBag.Title = "Nhập thuốc mới";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label>Mã phiếu</label>
            <div class="col-md-10">
                @Html.DropDownList("maphieu", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.maphieu, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Tên thuốc</label>
            <div class="col-md-10">
                @Html.DropDownList("mathuoc", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.mathuoc, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Số kiểm soát</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.soks, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.soks, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Nơi sản xuất</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.noisx, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.noisx, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Hạn sử dụng </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.hsd, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.hsd, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Số lượng nhập </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.slnhap, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.slnhap, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm" class="btn btn-primary" />
                <button class="btn btn-sm btn-dark">@Html.ActionLink("Trở về", "Index")</button>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
