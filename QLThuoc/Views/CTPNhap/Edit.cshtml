@model QLThuoc.Models.CTPNHAP

@{
    ViewBag.Title = "Sửa thuốc nhập";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.id)

        <div class="form-group">
            <label>Mã phiếu</label>
            <div class="col-md-10">
                @Html.DropDownList("maphieu", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.maphieu, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Tên thuốc</label>
            <div class="col-md-10">
                @Html.DropDownList("mathuoc", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.mathuoc, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.soks, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.soks, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.soks, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.noisx, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.noisx, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.noisx, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.hsd, htmlAttributes: new { @class = "control-label col-md-2" })
